{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "4.0b1",
  "author": "Janek Schwarz",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "identitychooser@janek.org",
      "strict_min_version": "115.0",
      "strict_max_version": "116.*"
    }
  },
  "permissions": [
    "accountsRead", "compose", "messagesRead", "storage"
  ],
  "background": {
    "page": "background.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "open_in_tab": true
  },
 "experiment_apis": {
    "icApi": {
      "schema": "icapi/schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [[ "icApi" ]],
        "script": "icapi/implementation.js"
      }
    },
    "composePrefsApi": {
      "schema": "composeprefsapi/schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [[ "composePrefsApi" ]],
        "script": "composeprefsapi/implementation.js"
      }
    },
    "icForwardApi": {
      "schema": "icforwardapi/schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [[ "icForwardApi" ]],
        "script": "icforwardapi/implementation.js"
      }
    },
    "icMenupopupApi": {
      "schema": "icmenupopupapi/schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [[ "icMenupopupApi" ]],
        "script": "icmenupopupapi/implementation.js"
      }
    },
    "legacyPrefsApi": {
      "schema": "legacyprefsapi/schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [[ "legacyPrefsApi" ]],
        "script": "legacyprefsapi/implementation.js"
      }
    }
  }
}
